<section class="login md:flex items-center justify-center mt-20 h-screen ">
  <div>
    <img class="w-1/2 mx-auto" src="/img/register.svg" alt="">
  </div>
  <div class="w-full md:w-1/3 ">
    <form action="/register" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <!-- messages object is avaailable bcoz of flash --> 
      <% if(messages.error){%>
        <span class="text-red-500 text-sm "><%= messages.error %></span>
        <%}%>
          <div class="mb-4 relative">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Name
            </label>
            <input name="name" value="<%=messages.name %>"
              class="w-full text-gray-700 outline-none "
              id="username" type="text" placeholder="Enter your Name">
              <div class="Border"></div>
          </div>
          <div class="mb-4 relative">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Email
            </label>
            <input name="email" value="<%=messages.email %>"
              class="w-full text-gray-700 outline-none "
              id="username" type="email" placeholder="Username">
              <div class="Border"></div>
          </div>
          <div class="mb-6 relative">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
              Password
            </label>
            <input name="password" 
              class="w-full text-gray-700 outline-none "
              id="password" type="password" placeholder="********">
              <div class="Border"></div>
          </div>
          <div class="flex items-center justify-between">
            <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit">
              Register
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/login">
              Already have Account?
            </a>
          </div>
    </form>
    
  </div>
</section>